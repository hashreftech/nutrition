<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">slider_add_data.slider_form_data_source</item>
            <item name="deps" xsi:type="string">slider_add_data.slider_form_data_source</item>
        </item>
        <item name="label" translate="true" xsi:type="string">General Information</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">slider_add_data</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">Tridhyatech\Slider\Block\Adminhtml\Grid\Edit\BackButton</item>
            <item name="delete" xsi:type="string">Tridhyatech\Slider\Block\Adminhtml\Grid\Edit\DeleteButton</item>
             <item name="reset" xsi:type="string">Tridhyatech\Slider\Block\Adminhtml\Grid\Edit\ResetButton</item>
            <item name="save" xsi:type="string">Tridhyatech\Slider\Block\Adminhtml\Grid\Edit\SaveButton</item>
            <item name="save_and_continue" xsi:type="string">Tridhyatech\Slider\Block\Adminhtml\Grid\Edit\SaveAndContinueButton</item>
        </item>
    </argument>
    <dataSource name="slider_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Tridhyatech\Slider\Model\Slider\DataProvider</argument>
            <argument name="name" xsi:type="string">slider_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">slider_id</argument>
            <argument name="requestFieldName" xsi:type="string">slider_id</argument>
            <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="*/*/save" />
                </item>
        </argument>
    </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
        <fieldset name="General">
       <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string"/>
            </item>
        </argument>
        <field name="title">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Title</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">Slider</item>
                    <item name="validation" xsi:type="array">
                    <item name="required-entry" xsi:type="boolean">true</item>
                </item>
                </item>
            </argument>
        </field>
        <field name="sliderurl">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Url</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">Slider</item>
                    <item name="validation" xsi:type="array">
                        <item name="validate-url" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
     <field name="icon">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="source" xsi:type="string">Slider</item>
                    <item name="label" xsi:type="string" translate="true">Slider Image</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="formElement" xsi:type="string">fileUploader</item>
                    <item name="elementTmpl" xsi:type="string">ui/form/element/uploader/uploader</item>
                    <item name="previewTmpl" xsi:type="string">Tridhyatech_Slider/image-preview</item>
                    <item name="required" xsi:type="boolean">false</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="uploaderConfig" xsi:type="array">
                    <item name="url" xsi:type="url" path="slider/slider/upload"/>
                    </item>
                    <item name="validation" xsi:type="array">
                    <item name="required-entry" xsi:type="boolean">false</item>
                </item>
                </item>
            </argument>
        </field>
        <field name="video">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Video URL</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">Slider</item>
                    <item name="notice" xsi:type="string" translate="true">Note : Supported only Youtube embedded Url Ex.(https://www.youtube.com/embed/ACwd3rVb0qA)</item>
                </item>
            </argument>
        </field>
    <field name="displayon">
    <argument name="data" xsi:type="array">
        <item name="options" xsi:type="object">Magento\Catalog\Ui\Component\Product\Form\Categories\Options</item>
        <item name="config" xsi:type="array">
            <item name="label" xsi:type="string" translate="true">Display On Category Page</item>
            <item name="componentType" xsi:type="string">field</item>
            <item name="formElement" xsi:type="string">multiselect</item>
            <item name="component" xsi:type="string">Tridhyatech_Slider/js/category-chooser</item>
            <item name="elementTmpl" xsi:type="string">ui/grid/filters/elements/ui-select</item>
            <item name="dataScope" xsi:type="string">displayon</item>
            <item name="filterOptions" xsi:type="boolean">true</item>
            <item name="showCheckbox" xsi:type="boolean">true</item>
            <item name="disableLabel" xsi:type="boolean">true</item>
            <item name="multiple" xsi:type="boolean">true</item>
            <item name="levelsVisibility" xsi:type="number">1</item>
            <item name="sortOrder" xsi:type="number">20</item>
            <item name="source" xsi:type="string">Slider</item>
            <item name="validation" xsi:type="array">
            <item name="required-entry" xsi:type="boolean">false</item>
            </item>
            <item name="listens" xsi:type="array">
                <item name="${ $.displayon }.${ $.displayon }:responseData" xsi:type="string">setParsed</item>
            </item>
        </item>
    </argument>
</field>
 <field name="products">
    <argument name="data" xsi:type="array">
        <item name="options" xsi:type="object">Tridhyatech\Slider\Model\Source\Display</item>
        <item name="config" xsi:type="array">
            <item name="label" xsi:type="string" translate="true">Display On Product Page</item>
            <item name="componentType" xsi:type="string">field</item>
            <item name="formElement" xsi:type="string">multiselect</item>
            <item name="component" xsi:type="string">Tridhyatech_Slider/js/products-chooser</item>
            <item name="elementTmpl" xsi:type="string">ui/grid/filters/elements/ui-select</item>
            <item name="dataScope" xsi:type="string">products</item>
            <item name="filterOptions" xsi:type="boolean">true</item>
            <item name="showCheckbox" xsi:type="boolean">true</item>
            <item name="disableLabel" xsi:type="boolean">true</item>
            <item name="multiple" xsi:type="boolean">true</item>
            <item name="levelsVisibility" xsi:type="number">1</item>
            <item name="sortOrder" xsi:type="number">20</item>
            <item name="source" xsi:type="string">Slider</item>
            <item name="validation" xsi:type="array">
            <item name="required-entry" xsi:type="boolean">false</item>
            </item>
            <item name="listens" xsi:type="array">
            <item name="${ $.products }.${ $.products }:responseData" xsi:type="string">setParsed</item>
            </item>
        </item>
    </argument>
</field>
<field name="cms">
    <argument name="data" xsi:type="array">
        <item name="options" xsi:type="object">Tridhyatech\Slider\Model\Source\CmsOptions</item>
        <item name="config" xsi:type="array">
            <item name="label" xsi:type="string" translate="true">Display On Cms Page</item>
            <item name="componentType" xsi:type="string">field</item>
            <item name="formElement" xsi:type="string">multiselect</item>
            <item name="component" xsi:type="string">Tridhyatech_Slider/js/cms-chooser</item>
            <item name="elementTmpl" xsi:type="string">ui/grid/filters/elements/ui-select</item>
            <item name="dataScope" xsi:type="string">cms</item>
            <item name="filterOptions" xsi:type="boolean">true</item>
            <item name="showCheckbox" xsi:type="boolean">true</item>
            <item name="disableLabel" xsi:type="boolean">true</item>
            <item name="multiple" xsi:type="boolean">true</item>
            <item name="levelsVisibility" xsi:type="number">1</item>
            <item name="sortOrder" xsi:type="number">20</item>
            <item name="source" xsi:type="string">Slider</item>
            <item name="validation" xsi:type="array">
            <item name="required-entry" xsi:type="boolean">false</item>
            </item>
            <item name="listens" xsi:type="array">
            <item name="${ $.cms }.${ $.cms }:responseData" xsi:type="string">setParsed</item>
            </item>
        </item>
    </argument>
</field>
        <field name="store_id">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Tridhyatech\Slider\Model\Source\Storeview</item>
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Store View</item>
                    <item name="formElement" xsi:type="string">multiselect</item>
                    <item name="dataScope" xsi:type="string">store_id</item>
                    <item name="default" xsi:type="string">1</item>
                    <item name="validation" xsi:type="array">
                    <item name="required-entry" xsi:type="boolean">true</item>
                </item>
                </item>
            </argument>
        </field>
            <field name="status">
             <argument name="data" xsi:type="array">
            <item name="options" xsi:type="object">Magento\Config\Model\Config\Source\Enabledisable</item>
            <item name="config" xsi:type="array">
            <item name="label" xsi:type="string" translate="true">Status</item>
            <item name="visible" xsi:type="boolean">true</item>
            <item name="dataType" xsi:type="string">text</item>
            <item name="formElement" xsi:type="string">select</item>
            <item name="required-entry" xsi:type="boolean">true</item>
            </item>
            </argument>
        </field>
        <field name="sortorder">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Sort Order</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">test</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">Slider</item>
                    <item name="validation" xsi:type="array">
                    <item name="validate-number" xsi:type="boolean">true</item>
                    <item name="required-entry" xsi:type="boolean">true</item>
                </item>
                </item>
            </argument>
        </field>
         <field name="content">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">wysiwyg</item>
                    <item name="source" xsi:type="string">Slider</item>
                    <item name="label" xsi:type="string">Content</item>
                    <item name="template" xsi:type="string">ui/form/field</item>
                    <item name="wysiwyg" xsi:type="boolean">true</item>
                    <item name="dataScope" xsi:type="string">content</item>
                    <item name="sortOrder" xsi:type="number">50</item>
                    <item name="rows" xsi:type="number">5</item>
                </item>
            </argument>
        </field>
         <field name="rightcontent">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">wysiwyg</item>
                    <item name="source" xsi:type="string">Slider</item>
                    <item name="label" xsi:type="string">Extra Right Side Content For Slider</item>
                    <item name="template" xsi:type="string">ui/form/field</item>
                    <item name="wysiwyg" xsi:type="boolean">true</item>
                    <item name="dataScope" xsi:type="string">rightcontent</item>
                    <item name="sortOrder" xsi:type="number">70</item>
                    <item name="rows" xsi:type="number">5</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
